                          var text = xhr.responseText;
                          var title = getTitle(text);
                          console.log('Response from CORS request to ' + url + ': ' + title);
                        };
                      
                        xhr.onerror = function() {
                          console.log('Woops, there was an error making the request.');
                        };
                      
                        xhr.send();
                    }
