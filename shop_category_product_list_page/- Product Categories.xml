<?xml version="1.0"?>
<data inherit_id="website_sale.products" active="False" customize_show="True" name="Product Categories">
        <xpath expr="//div[@id='products_grid_before']" position="inside">
            <ul class="nav nav-pills nav-stacked">
                <!-- <li t-att-class=" '' if category else 'active' ">
                    <a t-att-href="keep('/shop',category=0)" class="o_not_editable">All Products</a>
                </li> -->
                <t t-foreach="categories" t-as="c">
                    <t t-call="website_sale.categories_recursive"/>
                </t>
            </ul>
        </xpath>

        <!-- Second Product Category Loop (Inside div.product_grid) -->
        <xpath expr="//div[@id='prod_cat_in_prod_grid']" position="inside">
            <ul class="nav nav-pills nav-stacked">

                <t t-foreach="categories" t-as="c">
                    <t t-call="website_sale.categories_recursive_cust"/>
                </t>
            </ul>
        </xpath>

        <xpath expr="//div[@id='products_grid_before']" position="attributes">
            <attribute name="class">col-md-3 col-sm-12 col-xs-12</attribute>
        </xpath>
        <xpath expr="//div[@id='products_grid']" position="attributes">
            <attribute name="class">col-md-9 col-sm-12</attribute>
        </xpath>
    </data>

    
