<?xml version="1.0"?>
<data name="Delivery Costs" inherit_id="website_sale.total">
    <xpath expr="//div[@id='order_total_untaxed']" position="before">
        <style>
            #text-left{
                text-align:left !important;
            }
            
        </style>
            <div class='col-xs-12 col-sm-12' t-if="website_sale_order and website_sale_order.has_delivery">
                <div class='col-xs-6 col-sm-3' id='text-left'>
                    <span title="Delivery will be updated after choosing a new delivery method">Delivery:</span>
                </div>
                <div class="col-xs-6 col-sm-6" id='text-left'>
                    <span t-field="website_sale_order.amount_delivery" t-options="{                               &quot;widget&quot;: &quot;monetary&quot;,                               &quot;display_currency&quot;: website_sale_order.currency_id,                           }"/>
                </div>
            </div>
       
    </xpath>
</data>

