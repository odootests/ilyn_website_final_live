                    .js_cart_lines > .col-sm-offset-8 {
                        	margin-left:3% !important;
                    }
                    #oe_main_menu_navbar{
                        max-width:100% !important
                    }
                   #wrapwrap {
                        position: relative;
                        display: table;
                        table-layout: fixed;
                        max-width: 100%;
                        height: 100%;
                    }
                    
                    .pad_lrz {
                         text-align: left;
                     }
                     .mb64 {
                         margin-bottom: 1% !important;
                     }
                     
                     
                     .mt64 {
                         margin-top: 1% !important;
                     }
                    .mt24 {
