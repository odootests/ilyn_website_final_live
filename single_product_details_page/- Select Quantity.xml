<?xml version="1.0"?>
<data inherit_id="website_sale.product" customize_show="True" name="Select Quantity">
    <xpath expr="//a[@id='add_to_cart']" position="before">
        <style>
              .css_quantity{
                  max-width: 196px;
                }
            .oe_website_spinner,{
                height:45px;
            }
            input[name="add_qty"]{
                height:45px;
            }
            #prod_qty_input_spv{
                height:48px;
            }
            .input_qty_btn_spv, .js_add_cart_json{
                border-radius:0;
                background: white !important;
                border: 1px solid #cccccc !important;
                color:#c1b497;
                padding:15px;
                -webkit-transition: all 0.3s ease-in-out;
                -moz-transition: all 0.3s ease-in-out;
                -ms-transition: all 0.3s ease-in-out;
                -o-transition: all 0.3s ease-in-out;
                transition: all 0.3s ease-in-out;
            }
            .input_qty_btn_spv:hover, .js_add_cart_json:hover{
                background: #c1b497 !important;
                color: white;
                
            }
            .oe_website_sale ul ul {
                margin-left: 0;
            }
          </style>
        <div class="css_quantity input-group oe_website_spinner" contenteditable="false">
            <a t-attf-href="#" class="mb8 input-group-addon js_add_cart_json input_qty_btn_spv">
                <i class="fa fa-minus"/>
            </a>
            <input type="text" class="form-control quantity" data-min="1" name="add_qty" value="1" id='prod_qty_input_spv'/>
            <a t-attf-href="#" class="mb8 input-group-addon float_left js_add_cart_json input_qty_btn_spv">
                <i class="fa fa-plus"/>
            </a>
        </div>
    </xpath>
</data>

    
