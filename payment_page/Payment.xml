                  	margin-left: 0 !important;
                  }
            	
            }
            
            
            
            @media screen and (min-width: 768px) and (max-width: 1024px) {
                #cart_total{
                    padding-left:0 !important;
                    padding-right:0 !important;
                }
            	#atcp3_payment_method_div{
                    padding-left: 0px !important;
                }
            }
            @media screen and (min-width: 1024px) and (max-width: 1366px) {
            	#atcp3_payment_method_div{
                    padding-left: 0px !important;
                }
            }
            @media screen and (min-width: 1200px){
            	#atcp3_payment_method_div{
                    padding-left: 0px !important;
                }
            }
        </style>

        <script>
            $(document).ready(function(){
                    if ($("input.acp4_delivery_method_radio#2").attr("checked")){
                        $("#14").hide();
                    }
                    if ($("input.acp4_delivery_method_radio#7").attr("checked")){
                        $("#13").hide();
                        $("#14").hide();
                    }
                    
                    // pay now button text change by mahedi
                    $(".oe_sale_acquirer_button form button span").html("PLACE ORDER");
                    
            });
        </script>

        <div id="wrap" style="font-family: 'Oxygen', sans-serif">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 first_row_acp3">
                <div class='container'>
                    <div class='col-xs-4 col-sm-6 col-lg-6 padleft_zero'>
                        <h2 class="mb16 text-uppercase breadcrumb_heading_acp3">Payment</h2>
                    </div>
                    <div class="col-xs-8 col-sm-6 col-lg-6 padright_zero">
                        <ol class="breadcrumb pull-right">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/shop">Shop</a>
                            </li>
                            <li class="active">
                                <span>Payment</span>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-xs-12  mt64 mb64">
                <div class="container oe_website_sale">
                    <div class='sec_row_acp3 '>
                        <t t-call="website_sale.wizard_checkout">
                            <t t-set="step" t-value="40"/></t>
                        <div class="row">
                            <div class="col-lg-8 col-sm-9">
                                <t t-foreach="errors" t-as="error">
                                    <div class="alert alert-danger" t-if="error">
                                        <h4>
                                            <t t-esc="error[0]"/>
                                        </h4>
                                        <t t-esc="error[1]"/>
                                    </div>
                                </t>
                            </div>
                            <div class=" mb64" id="right_column">
                                <t t-call="website_sale.bill_to">
                                    <t t-set="order" t-value="order"/></t>
                            </div>
                            <div class=" oe_cart">
                                <div class='col-sm-12 col-lg-12 mt32 mb32'>
                                    <table class="table" id="cart_products" t-if="website_sale_order and website_sale_order.website_order_line">
                                        <thead>
                                            <tr class='atcp3_panel_heading_cust'>
                                                <th width='20%'></th>
                                                <th width='40%'>Product</th>
                                                <th width='20%' class='text-center'> Price </th>
                                                <th width='20%' class='text-center' id="td-qty"> Quantity  </th>
                                                <th width='20%' class='text-center' id="cust-td-pricetotal">Sub-Total </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="website_sale_order.website_order_line" t-as="line" class='actp3_prod_tr_border'>
                                                <td colspan="2" t-if="not line.product_id.product_tmpl_id"/>
                                                
                                                <td class='col-sm-2' align='center' t-if="line.product_id.product_tmpl_id">
                                                    <a class='actp3_prod_name' t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                                        <span t-field="line.product_id.image_small" t-options="{'widget': 'image'}"/>
                                                    </a>
                                                </td>
                                                
                                                
                                                <td class='col-sm-4' t-if="line.product_id.product_tmpl_id" style='padding-left:18px'>
                                                    <div class='mt24'>
                                                        <strong t-field="line.product_id.with_context(display_default_code=False).display_name"/>
                                                    </div>
                                                    <!--<div class="text-muted">-->
                                                    <!--    <t t-foreach="line.name.splitlines()[1:]" t-as="name_line">-->
                                                    <!--        <span>-->
                                                    <!--            <t t-esc="name_line"/>-->
                                                    <!--        </span>-->
                                                    <!--        <br/>-->
                                                    <!--    </t>-->
                                                    <!--</div>-->
                                                </td>
                                                
                                                <td class="text-center">
                                                    <div class='mt24'>
                                                        <span t-field="line.price_unit" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                                                    </div>
                                                </td>
                                                
                                                <td class="text-center col-sm-2" id="td-qty" style='padding: 12px 0;'>
                                                    <div class='mt24 acp3_pqty' t-esc="line.product_uom_qty"/>
                                                </td>
                                                
                                                <td class="text-center col-sm-2" id="cust-td-pricetotal" style='padding: 12px 0;'>
                                                    <div class='mt24'>
                                                        <span t-field='line.price_total'></span>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    
                                    <div class='col-sm-12 mb32 actp3_prod_tr_border hidden-sm'>
                                        <div style='padding-top: 2%;'>
                                            <t t-call="website_sale.total">
                                                <t t-set="extra_class" t-value="&quot;col-sm-4 col-sm-offset-8 col-xs-12  paymentPageCartSummery&quot;"/>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <div class='col-sm-12 mb32 actp3_prod_tr_border hidden-xs hidden-md hidden-lg'>
                                        <div style='padding-top: 2%;'>
                                            <t t-call="website_sale.total">
                                                <t t-set="extra_class" t-value="&quot;col-sm-6 col-sm-offset-7 col-xs-12  paymentPageCartSummery&quot;"/>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                                
                                <div class="clearfix"/>
                                <div class="oe_structure"/>
                                <div class="js_payment mb64 row" t-if="acquirers and website_sale_order.amount_total" id="payment_method">
                                    
                                    <div class="col-lg-6 col-sm-6" id="atcp3_payment_method_div">
                                        <div class='col-sm-12'>
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h4 class='panel-title'> Payment Method </h4>
                                                </div>
                                                <div class="panel-body">
                                                    <ul class="list-unstyled">
                                                <t t-foreach="acquirers or []" t-as="acquirer">
                                                    <li class='acp4_payment_method_listitem' t-att-id='acquirer.id'>
                                                        <label t-if="acquirer.button">
                                                            <input  t-att-value="acquirer.id" type="radio" name="acquirer" t-att-checked="acquirers[0] == acquirer"/>
                                                            <span t-field="acquirer.image_small" t-att-title="acquirer.name" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;style&quot;:&quot;max-width: 60px; display: inline-block&quot;}"/>
                                                            <span t-field="acquirer.name"/>
                                                            <span t-if="acquirer.fees_active">(processing fees apply)</span>
                                                        </label>
                                                    </li>
                                                </t>
                                                <li t-if="tokens">
                                                    <label>
                                                        <input type="radio" name="acquirer"/>
                                                        <span class="fa fa-2x fa-credit-card"/>
                                                    Saved Cards
                                                
                                                    
                                                    
                                                    </label>
                                                    <div class="list-group">
                                                        <t t-foreach="tokens" t-as="token">
                                                            <a class="list-group-item btn_payment_token" t-att-data-acquirer="token.acquirer_id.id" t-att-data-token="token.id">
                                                                <span class="js_radio fa fa-circle-o"/>&amp;nbsp;
                                                            
                                                                
                                                                
                                                                <t t-esc="token.name"/>
                                                                <t t-if="len(set(tokens.mapped('acquirer_id')))&gt;1">
                                                                (
                                                                    
                                                                    
                                                                    <t t-esc="token.acquirer_id.name"/>)
                                                            </t>
                                                                <span t-if="token.acquirer_id.fees_active">(processing fees apply)</span>
                                                            </a>
                                                        </t>
                                                    </div>
                                                </li>
                                            </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    
                                    <div class='col-sm-12 col-xs-12'>
                                        <div class='col-sm-12 col-xs-12'>
                                            <div class='col-sm-12 col-xs-12 frth_row_acp3 mt32 mb32'>
                                                <div class="col-lg-6 col-sm-6 col-xs-6">
                                                    <a href="/shop/checkout" class="btn actp3_btn btn_back_atcp3"> Back </a>
                                                </div>
                                        
                                            <div class="col-lg-6 col-sm-6 col-xs-6 text-right">
                                                <t t-foreach="acquirers or []" t-as="acquirer" id="acquirers_list">
                                                    <div t-att-data-id="acquirer.id" class="oe_sale_acquirer_button hidden pull-right">
                                                        <div t-raw="acquirer.button"/>
                                                        <div class="token_hide">
                                                            <div t-if="acquirer.save_token == 'ask'">
                                                                <input type="checkbox" name="odoo_save_token"/>
                                                                <label for="odoo_save_token">Save my payment data</label>
                                                            </div>
                                                            <div class="pre_msg hidden-xs" t-field="acquirer.pre_msg"/>
                                                        </div>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                                    
                                    
                                    
                                    
                                    
                                </div>
                                <div class="js_payment mb64 row" t-if="not website_sale_order.amount_total" id="payment_method">
                                    <div class="col-sm-12">
                                        <form target="_self" action="/shop/payment/validate" method="post" class="pull-right">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <a class="btn btn-primary a-submit">
                                                <span t-if="order.amount_total &gt; 0">Place Order 
                                                    
                                                    
                                                    <span class="fa fa-long-arrow-right"/></span>
                                                <span t-if="order.amount_total == 0">Confirm Order 
                                                    
                                                    
                                                    
                                                    
                                                    </span>
                                            </a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="oe_structure"/></div>
    </t>
</t>

    
