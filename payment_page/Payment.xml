                }
                .thrd_row_acp3{
                    background: #f5f5f5;
                    padding: 20px;
                }
                .oe_sale_acquirer_button form button{
                    background: #b9a78c !important;
                    border-radius: 0;
                    color: white;
                    text-transform: uppercase;
                    padding: 15px 35px;
                    border:none;
                    font-weight: bold;
                }
                
                .oe_sale_acquirer_button form button:hover, .oe_sale_acquirer_button form button:active, .oe_sale_acquirer_button form button:focus{
                    color: white !important;
                    background-color: #b9a78c !important;
                }
                .pre_msg p{
                    padding-top:10px;
                    color: #252525;
                    font-size: 12px;
                }
                .actp3_btn{
                    padding: 15px 35px;
                    border-radius: 0;
                    text-transform: uppercase;
                    font-size: 14px;
                    line-height: 1.3333333;
                    font-weight: bold;
                    font-family: Lato;
                    -webkit-transition: all 0.3s ease-in-out;
                    -moz-transition: all 0.3s ease-in-out;
                    -ms-transition: all 0.3s ease-in-out;
                    -o-transition: all 0.3s ease-in-out;
                    transition: all 0.3s ease-in-out;
                }
                .btn_back_atcp3{
                    color: #252525;
                    background: #dedede;
                    min-width: 136px;
                }
                .btn_back_atcp3:hover{
                   /* background: #c1b497;
                    color: white; */
                     color: #252525;
                    background: #dedede;
                }
                .frth_row_acp3{
                    background: #f5f5f5;
                    padding: 20px 10px 20px 10px;
                }
                .panel-body ul li label{
                    font-size: 12px;
                }
                .panel-body ul li label span img{
                    max-width: 37px !important;
                }

            </style>
            
        <style>
